<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.practiceset2.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingTop="30dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">
        <LinearLayout
            android:id="@+id/teamA"
            android:background="@android:color/holo_blue_bright"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_alignParentLeft="true">
            <TextView
                android:textSize="30sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Team A"
                android:layout_gravity="center"
                android:textColor="#616161"
                android:paddingBottom="30dp"/>
            <Button
                android:id="@+id/pointA"
                android:onClick="pointA"
                android:layout_gravity="center"
                android:textSize="60sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="#000000"
                android:gravity="center_horizontal"
                android:layout_marginBottom="30dp"/>
            <Button
                android:id="@+id/point3A"
                android:onClick="point3A"
                android:layout_gravity="center"
                android:background="@android:color/holo_orange_light"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+3 Points"
                android:layout_marginBottom="20dp"/>
            <Button
                android:id="@+id/point2A"
                android:layout_gravity="center"
                android:onClick="point2A"
                android:background="@android:color/holo_orange_light"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+2 Points"
                android:layout_marginBottom="20dp"/>
            <Button
                android:id="@+id/noPointA"
                android:layout_gravity="center"
                android:onClick="noPointA"
                android:background="@android:color/holo_orange_light"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Free throws"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/teamB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:background="@android:color/holo_blue_bright"
            android:layout_alignParentRight="true">
            <TextView
                android:textSize="30sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Team B"
                android:layout_gravity="center"
                android:textColor="#616161"
                android:layout_marginBottom="30dp"/>
            <Button
                android:id="@+id/pointB"
                android:layout_gravity="center"
                android:onClick="pointB"
                android:textSize="60sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="#000000"
                android:gravity="center_horizontal"
                android:layout_marginBottom="30dp"/>
            <Button
                android:id="@+id/point3B"
                android:layout_gravity="center"
                android:onClick="point3B"
                android:background="@android:color/holo_orange_light"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+3 Points"
                android:layout_marginBottom="20dp"/>
            <Button
                android:id="@+id/point2B"
                android:layout_gravity="center"
                android:onClick="point2B"
                android:background="@android:color/holo_orange_light"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+2 Points"
                android:layout_marginBottom="20dp"/>
            <Button
                android:id="@+id/noPointB"
                android:layout_gravity="center"
                android:onClick="noPointB"
                android:background="@android:color/holo_orange_light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Free throws"
                android:textSize="20sp"/>
        </LinearLayout>
        <Button
            android:id="@+id/reset"
            android:onClick="reset"
            android:background="@android:color/holo_orange_light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reset"
            android:textSize="30sp"
            android:layout_above="@id/result"
            android:layout_centerHorizontal="true" />
        <TextView
            android:id="@+id/result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Game starts"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:textSize="20sp"/>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
